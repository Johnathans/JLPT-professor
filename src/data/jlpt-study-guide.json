{
  "levels": {
    "N5": {
      "title": "JLPT N5 Study Guide",
      "description": "Entry level certification for basic Japanese comprehension",
      "examSections": {
        "language": {
          "title": "Language Knowledge (文字・語彙・文法)",
          "timeLimit": "25 minutes",
          "questions": "38 questions",
          "content": [
            {
              "section": "Vocabulary & Kanji",
              "points": [
                "800 basic vocabulary words",
                "100 kanji characters",
                "Basic verb conjugations (ます, て-form)",
                "Common adjectives and their conjugations",
                "Numbers, time, and dates",
                "Basic nouns for everyday objects"
              ]
            },
            {
              "section": "Grammar",
              "points": [
                "Basic sentence structure (は, が, を, に, で)",
                "Present and past tense",
                "Basic questions (か, どこ, なに)",
                "Basic counters and time expressions",
                "Simple requests and desires (ください, ほしい)",
                "Basic て-form usage"
              ]
            }
          ]
        },
        "reading": {
          "title": "Reading (読解)",
          "timeLimit": "50 minutes",
          "questions": "12 questions",
          "content": [
            {
              "section": "Reading Comprehension",
              "points": [
                "Short text messages and emails",
                "Simple signs and notices",
                "Basic advertisements",
                "Short diary entries",
                "Simple schedules and timetables"
              ]
            }
          ]
        },
        "listening": {
          "title": "Listening (聴解)",
          "timeLimit": "30 minutes",
          "questions": "15 questions",
          "content": [
            {
              "section": "Listening Comprehension",
              "points": [
                "Basic greetings and conversations",
                "Simple questions and answers",
                "Short announcements",
                "Basic instructions",
                "Simple telephone conversations"
              ]
            }
          ]
        }
      },
      "studyPlan": {
        "estimated_time": "3-6 months (150-300 hours)",
        "weekly_goals": [
          {
            "focus": "Vocabulary & Kanji",
            "tasks": [
              "Learn 30-40 new words per week",
              "Practice writing 5 new kanji",
              "Review previously learned kanji",
              "Use flashcards for daily review"
            ]
          },
          {
            "focus": "Grammar",
            "tasks": [
              "Study 2-3 grammar points per week",
              "Complete practice exercises",
              "Write simple sentences",
              "Review previous grammar points"
            ]
          },
          {
            "focus": "Reading & Listening",
            "tasks": [
              "Read short texts daily",
              "Listen to basic conversations",
              "Practice with audio materials",
              "Take practice tests weekly"
            ]
          }
        ]
      },
      "resources": {
        "textbooks": [
          "Genki I",
          "Minna no Nihongo I",
          "JLPT N5 Complete Practice Tests"
        ],
        "online": [
          "JLPT Professor N5 Kanji Course",
          "JLPT Professor Practice Tests",
          "JLPT Professor Flashcards"
        ],
        "apps": [
          "Anki (flashcards)",
          "Japanese (free dictionary)",
          "Kanji Study"
        ]
      },
      "tips": [
        "Focus on mastering basic sentence patterns before moving to complex grammar",
        "Practice writing kanji daily, even if just for 10 minutes",
        "Listen to Japanese audio while doing other activities",
        "Use real-life situations to practice basic conversations",
        "Take regular mock tests to track progress"
      ]
    },
